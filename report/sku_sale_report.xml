<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="sku_sale_pdf_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="mb-0">SKU | Product Title Name</h2>
                                    <hr style="width:95%"/>

                                    <div class="text-center my-4">
                                        <img src="/cyb_sku_product_report/static/src/img/white_imageDouble.png"
                                             style="width: 80%; height: auto;"/>
                                    </div>

                                    <hr style="width:95%"/>

                                    <h3 class="fw-bold fs-3 mb-1">Features</h3>

                                    <div class="row">
                                        <div class="col-3">
                                            <div class="card" style="width:110px;">
                                                <img src="/cyb_sku_product_report/static/src/img/single.jpg"
                                                     class="card-img-top img-fit"/>
                                                <div class="card-body text-center">
                                                    <p class="card-text pt-2">Perforated back panel Size</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="card" style="width:110px;">
                                                <img src="/cyb_sku_product_report/static/src/img/single.jpg"
                                                     class="card-img-top img-fit"/>
                                                <div class="card-body text-center">
                                                    <p class="card-text pt-2">3D Raised Embroidery</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="card" style="width:110px;">
                                                <img src="/cyb_sku_product_report/static/src/img/single.jpg"
                                                     class="card-img-top"/>
                                                <div class="card-body text-center">
                                                    <p class="card-text pt-2">Mesh Liner</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3" style="margin-top:-30px;">
                                            <div class="">
                                                <h4 class="fw-bold">Description</h4>
                                                <p class="ms-1">
                                                    Lorem Ipsum is simply dummy text of the printing
                                                    and typesetting industry. It has been the industry's
                                                    standard dummy text been the industry's
                                                    standard since.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-5">
                                    <div class="text-right">
                                        <img src="/cyb_sku_product_report/static/src/img/blue_huddy.png"
                                             style="width: 500px; max-height: 900px; object-fit: contain;"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>