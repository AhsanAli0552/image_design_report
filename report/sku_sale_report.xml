<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="sku_sale_pdf_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="container">
                            <div class="row">
                                <div class="col-7 pt-5">
                                    <h3><t t-esc="line.default_code"/> |<t t-esc="line.product_id.name"/></h3>
                                    <hr/>
                                    <div class="text-center mt-4">
                                        <t t-if="line.product_id.hover_image">
                                            <img t-att-src="image_data_uri(line.product_id.hover_image)"
                                                 t-att-alt="line.product_id.name or 'Product Image'"
                                                 style="width: 550px;"/>
                                        </t>
                                        <t t-else="">
                                            <p style="color: #999;">[NO IMAGE AVAILABLE]</p>
                                        </t>
                                    </div>
                                    <hr/>
                                    <!--another row in col-7-->
                                    <div class="row">
                                        <div class="col-8">
                                            <h5>
                                                <b>Features</b>
                                            </h5>
                                            <div class="row">
                                                <div class="col-4 me-3">
                                                    <div class="product_image">
                                                        <t t-if="line.product_id.product_template_image_ids[0]">
                                                            <img t-att-src="image_data_uri(line.product_id.product_template_image_ids[0].image_1920)"
                                                                 style="width:100%;"/>
                                                        </t>
                                                        <p class="text-center mt-1">Perforated Back panel</p>
                                                    </div>
                                                </div>
                                                <div class="col-4 me-3">
                                                    <div class="product_image">
                                                        <t t-if="line.product_id.product_template_image_ids[1]">
                                                            <img t-att-src="image_data_uri(line.product_id.product_template_image_ids[1].image_1920)"
                                                                 style="width:100%;"/>
                                                        </t>
                                                        <p class="text-center mt-1">Mesh Liner</p>
                                                    </div>
                                                </div>
                                                <div class="col-4 me-3">
                                                    <div class="product_image">
                                                         <t t-if="line.product_id.product_template_image_ids[2]">
                                                            <img t-att-src="image_data_uri(line.product_id.product_template_image_ids[2].image_1920)"
                                                                 style="width:100%;"/>
                                                        </t>
                                                        <p class="text-center mt-1">Hunting The Crop</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3 offset-1">
                                            <h5>
                                                <b>Description</b>
                                            </h5>
                                            <div class="description_text">
                                                <p>
                                                    <t t-esc="line.product_id.description_sale"/>
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="right_image">
                                        <t t-if="line.x_studio_art_image">
                                            <img t-att-src="image_data_uri(line.x_studio_art_image)"
                                                 class="ps-3" style="width: 480px;"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>